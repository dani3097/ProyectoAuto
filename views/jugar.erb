<body>
    <div class="jumbotron jumbotron-fluid h-100 w-100 d-flex">
        <div class="container">
          <h1 class="display-4">Ingresar datos</h1>
        </div>
    </div>
    <div class="container">
      <h2>Ingresar dimensiones del terreno</h2>
      <label>Filas</label>
      <input class="form-control" type="number" id='filas' name='filas'>
      <label>Columnas</label>
      <input class="form-control" type="number" id='cols' name='cols'>
      <h2>Ingresar posicion inicial</h2>
      <label>Posicio X</label>
      <input class ="form-control" type= "number" id ='posicionX' name ='posicionX'>
      <label>Posicion Y</label>
      <input class= "form-control" type "number" id ='posicionY' name ='posicionY'>
      <label>Sentido</label>
      <input  class ="form-control" type= "text" id ='sentido' name ='sentido'>
      <h2>Ingresar movimientos</h2>
      <form class="form-group" method="GET" action="/jugar">
        <input class="btn btn-primary" type="submit" value ='Izquierda'>
        <input class="btn btn-primary" type="submit" value ='Derecha'>
        <input class="btn btn-primary" type="submit" value ='Avanzar'>
      </form>
    </div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
